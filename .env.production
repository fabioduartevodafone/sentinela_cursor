# Configuração de Produção - Sentinela Emergency System
# IMPORTANTE: Este arquivo contém configurações de exemplo
# Substitua pelos valores reais antes do deploy

# Aplicação
VITE_APP_NAME=Sistema Sentinela
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
NODE_ENV=production

# Supabase Configuration (PRODUÇÃO)
VITE_SUPABASE_PROJECT_ID=your-production-project-id
VITE_SUPABASE_URL=https://your-production-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key-here

# Database Configuration (PRODUÇÃO)
DATABASE_URL=postgresql://sentinela_user:secure_password@postgres:5432/sentinela_db
POSTGRES_PASSWORD=sentinela_secure_password_change_me

# Redis Configuration
REDIS_PASSWORD=sentinela_redis_password_change_me
REDIS_URL=redis://:sentinela_redis_password_change_me@redis:6379

# Storage Configuration
VITE_SUPABASE_STORAGE_URL=https://your-production-project-id.supabase.co/storage/v1

# Security
JWT_SECRET=your-super-secure-jwt-secret-change-me
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Monitoring (opcional)
GRAFANA_PASSWORD=secure_grafana_password_change_me

# API Configuration
API_BASE_URL=https://your-domain.com/api
CORS_ORIGIN=https://your-domain.com

# SSL/TLS (se usando HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/sentinela.crt
SSL_KEY_PATH=/etc/ssl/private/sentinela.key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
MAX_CONNECTIONS=100
TIMEOUT=30000

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30